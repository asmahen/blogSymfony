{% extends "base.html.twig" %}

{% form_theme formArticle 'bootstrap_4_layout.html.twig' %}

{% block body %}

    {% if editMode %}
        <h1>Modification d'un article </h1>
    
    {% else %}
        <h1>Ajout d'un article </h1>
    
    {% endif %}
   

    {{ form_start(formArticle) }}

    {{ form_row(formArticle.title, {'attr': {'placeholder': "Titre de l'article", 'class': 'fs-5'}}) }}

    {{ form_row(formArticle.categroy) }}

    {{ form_row(formArticle.content,{'attr': {'placeholder': "Description de l'article", 'class': 'fs-5'}}) }}

    {{ form_row(formArticle.image, {'attr': {'placeholder': "Url de l'article", 'class': 'fs-5'}}) }}

    <button type="submit" class="btn btn-primary btn-lg">
        {% if editMode %}
            Enregister
        
        {% else %}
            Ajouter l'article

        {% endif %}
    </button>
    {{ form_end(formArticle) }}

{% endblock %}

